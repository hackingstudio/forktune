{
  "compilerOptions": {
    "outDir": "build",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "files": [
    "src/index.ts"
  ]
}